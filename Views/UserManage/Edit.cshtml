@model WebsiteBaby3.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="mb-4 text-center">✏️ Chỉnh sửa thông tin người dùng</h2>
<hr />

<div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Họ và Tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên..." />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label fw-bold">Mật khẩu</label>
                <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Nhập mật khẩu mới nếu muốn thay đổi..." />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" type="tel" placeholder="Nhập số điện thoại..." />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ..." />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CreatedAt" class="form-label fw-bold">Ngày tạo</label>
                <input asp-for="CreatedAt" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleId" class="form-label fw-bold">Vai trò</label>
                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleId">
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
